<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-600 text-white px-10 py-8">
        <div class="cards flex flex-wrap gap-10">
            <% posts.forEach(elem => {%>
                <div class="card w-32">
                    <div class=" w-full h-40 bg-zinc-100 rounded-lg">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%=elem.image%>" alt="">
                    </div>
                    <h5 class="text-base mt-2"><%= elem.title%></h5>
                    <h6 class="text-xs opacity-40">@<%= elem.user.username %></h6>
                    <hr class="opacity-10">
                    <p class="text-sm"><%= elem.description%></p>

                </div>
            <% }); %>
        </div>
    </div>

    <% include ./partials/footer.ejs %>