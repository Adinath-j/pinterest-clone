<% include ./partials/header.ejs %>

    <div class="profile text-white w-full min-h-screen bg-zinc-800 pt-1">
        <form action="/fileupload" hidden id="uploadform" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        <div class="profdets flex flex-col items-center flex-start mt-20">
            <div class="relative">
                <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 flex items-center justify-center rounded-full bg-zinc-300"><i class="text-zinc-800 ri-pencil-line"></i></span>
                <div class="w-32 h-32 rounded-full bg-zinc-100 overflow-hidden">
                    <img class="h-full w-full object-cover "
                        src="/images/uploads/<%=user.profileImage %>" alt="">
                </div>
            </div>
            <h1 class="text-3xl font-semibold mt-5"><%= user.name%></h1>
            <div class="text-md"><%= user.username  %></div>
            <a href="/edit" class="px-7 py-2 bg-zinc-700 rounded-full mt-5">edit</a>
            <a class="px-3 mt-3 py-2 bg-red-600 rounded-lg" href="/add">Add New Post</a>
        </div>
        <div class="cards px-10 gap-10 mt-10 flex flex-wrap">
            <div>
                <div class="card w-56 h-40 bg-zinc-300 rounded-lg overflow-hidden">
                    <img class="h-full w-full object-auto"
                        src="/images/uploads/<%=user?.posts[0]?.image %>" alt="No image">
                </div>
                <a href="/show/posts" class="inline-block text-xl font-semibold mt-3">Your uploaded Pins</a>
                <h5 class="text-sm font-medium"><%= user.posts.length%> Pins</h5>
            </div>
        </div>
    </div>
    </div>
    <script>
        document.querySelector("#uploadicon").addEventListener("click",function(){
            document.querySelector("#uploadform input").click()
        })
        document.querySelector("#uploadform input").addEventListener("change",function(){
            document.querySelector("#uploadform").submit()
        })
    </script>


    <% include ./partials/footer.ejs %>