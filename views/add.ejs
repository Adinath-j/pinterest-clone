<% include ./partials/header.ejs %>

<div class="text-white w-full min-h-screen bg-zinc-700 px-10 py-5">
    <h3>Create a new post</h3>
    <hr class="opacity-10">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="text-black block px-2 py-2 mt-2 w-1/3 bg-zinc-100 text-black" type="file" name="postimage">
        <input class="text-black block border-2  rounded-lg px-2 py-2 mt-2 w-1/3" type="text" placeholder="Title" name="title">
        <textarea class="text-black block border-2 h-56 rounded-lg px-2 py-2 mt-2 w-1/3 h-32" type="text" placeholder="Description" name="description" id=""></textarea>
        <input class="block rounded-lg px-2 py-2 mt-2 w-1/3 bg-red-600" type="submit" value="Create Post">
    </form>
</div>

